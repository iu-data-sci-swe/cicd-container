{
  "name": "Python Dev Container",
  "image": "python:3",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "uid": "1000",
      "gid": "1000",
      "upgrade": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "forwardPorts": [8080,8081,8082],
  
  "portsAttributes": {
    "8080": {
      "label": "Static Web Server",
      "onAutoForward": "notify"
    }
  }
}
